<header>
  <div class="collapse navbar-inverse navbar-collapse" id="bs-example-navbar-collapse-1">
    <%= link_to 'Social Login', root_path, class: 'navbar-brand' %>
    <ul class="nav navbar-nav">
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Twitter', '/auth/twitter' %></li>
        </ul>
      <% end %>
    </ul>
  </div>
</header>

<script>
   $('.dropdown-toggle').dropdown()
</script>